<%- include('partials/header'); %>

<div class="container">
    <div class="jumbotron">
        <h3 class="text-center">Edit <%= camp.name %> </h3>
    </div>
    <div style="width: 30%; margin: 0 auto;">
        <form action="/campgrounds/<%= camp._id %>/edit?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" value="<%= camp.name %> " name="cam[name]" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="name">Image</label>
                <input type="text" class="form-control" id="image" name="cam[image]" value="<%= camp.image %>" placeholder="Image">
            </div>
            <div class="form-group">
                <label for="name">Description</label>
                <textarea id="name" class="form-control" name="cam[description]" rows="4" cols="50"><%= camp.description %> </textarea>
            </div>
            <button class="btn btn-primary btn-block" type="submit">Submit</button>
        </form>
    </div>
</div>

<%- include('partials/footer'); %>
