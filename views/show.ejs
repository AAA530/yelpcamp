<%- include('partials/header'); %>

<p>this is name : <%= camp.name %> </p>
<p>this is image : <img src="<%= camp.image %>"></img> </p>

<p>this is description : <%= camp.description %> </p>



<div class="container">
    <a class="btn btn-primary" href="/campgrounds/<%= camp.id %>/comments/new">Add new comment</a>
    <div class="text-center"><h1>Comments</h1></div>
    <p>
        <% camp.comments.forEach(element => { %>
            <p>
                <strong>
                    <%= element.author %> 
                </strong>
                <p>
                    <%= element.text %> 
                </p>
            </p>
        <% }); %> 
    </p>
</div>


<%- include('partials/footer'); %>