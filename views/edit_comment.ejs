<%- include('partials/header'); %>

<div class="container">
    <div class="jumbotron">
        <h3 class="text-center">Enter comment </h3>
    </div>
    <div style="width: 30%; margin: 0 auto;">
        <form action="/campgrounds/<%= camp.id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Comments</label>
                <input type="text" class="form-control" id="comment" value="<%= comment.text %>" name="comment[text]" placeholder="Comment">
            </div>
            <button class="btn btn-primary btn-block" type="submit">Submit</button>
        </form>
    </div>
</div>


<%- include('partials/footer'); %>